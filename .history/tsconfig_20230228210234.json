{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "es2015", "es2017.object"],
    "sourceMap": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "outDir": "./build",
    "rootDir": "./src",
    "strict": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "jsx": "react",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "allowJs": true,
    "baseUrl": "./src"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
